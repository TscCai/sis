    <meta charset="utf-8">
    <title>火电厂生产检测系统登录</title>

    <!-- The styles -->
    <link href="@Url.Content("~/css/bootstrap-cerulean.css")" rel="stylesheet" type="text/css">
    <style type="text/css">
        body
        {
            padding-bottom: 40px;
        }

        .sidebar-nav
        {
            padding: 9px 0;
        }
    </style>
    <link href="@Url.Content("~/css/bootstrap-responsive.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/charisma-app.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/jquery-ui-1.8.21.custom.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/fullcalendar.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/fullcalendar.print.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/chosen.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/uniform.default.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/colorbox.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/jquery.cleditor.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/jquery.noty.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/noty_theme_default.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/elfinder.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/elfinder.theme.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/jquery.iphone.toggle.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/opa-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/css/uploadify.css")" rel="stylesheet">

    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
	  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

    <!-- The fav icon -->
    <link rel="shortcut icon" href="@Url.Content("~/img/favicon.ico")">
</head>

<body>
    <div class="container-fluid">
        <div class="row-fluid">

            <div class="row-fluid">
                <div class="span12 center login-header">
                    <h2 style="font-family:微软雅黑">欢迎使用火电厂生产监测系统</h2>
                </div>
                <!--/span-->
            </div>
            <!--/row-->

            <div class="row-fluid">
                <div class="well span5 center login-box">
                    <div class="alert @ViewBag.Class">
                       @ViewBag.Hint
                    </div>
                     @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                       { 
                        <fieldset>
                            <div class="input-prepend" title="用户名" data-rel="tooltip">
                                <span class="add-on"><i class="icon-user"></i></span>
                                @Html.TextBoxFor(m=>m.Username,new{autofocus="",@class="input-large span10"})
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" title="密码" data-rel="tooltip">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                @Html.PasswordFor(m=>m.Password,new{@class="input-large span10"})
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend">
                                <label class="remember" for="RememberMe">
                                    @Html.CheckBoxFor(m=>m.RememberMe)记住我</label>
                            </div>
                            <div class="clearfix"></div>

                            <p class="center span5">
                                <button type="submit" class="btn btn-primary">登录</button>
                            </p>
                        </fieldset>
                     }
                </div>
                <!--/span-->
            </div>
            <!--/row-->
        </div>
        <!--/fluid-row-->

    </div>
    <!--/.fluid-container-->

    <!-- external javascript
	================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <!-- jQuery -->
    <script src="@Url.Content("~/js/jquery-1.7.2.min.js")"></script>
    <!-- jQuery UI -->
    <script src="@Url.Content("~/js/jquery-ui-1.8.21.custom.min.js")"></script>
    <!-- transition / effect library -->
    <script src="@Url.Content("~/js/bootstrap-transition.js")"></script>
    <!-- alert enhancer library -->
    <script src="@Url.Content("~/js/bootstrap-alert.js")"></script>
    <!-- modal / dialog library -->
    <script src="@Url.Content("~/js/bootstrap-modal.js")"></script>
    <!-- custom dropdown library -->
    <script src="@Url.Content("~/js/bootstrap-dropdown.js")"></script>
    <!-- scrolspy library -->
    <script src="@Url.Content("~/js/bootstrap-scrollspy.js")"></script>
    <!-- library for creating tabs -->
    <script src="@Url.Content("~/js/bootstrap-tab.js")"></script>
    <!-- library for advanced tooltip -->
    <script src="@Url.Content("~/js/bootstrap-tooltip.js")"></script>
    <!-- popover effect library -->
    <script src="@Url.Content("~/js/bootstrap-popover.js")"></script>
    <!-- button enhancer library -->
    <script src="@Url.Content("~/js/bootstrap-button.js")"></script>
    <!-- accordion library (optional, not used in demo) -->
    <script src="@Url.Content("~/js/bootstrap-collapse.js")"></script>
    <!-- carousel slideshow library (optional, not used in demo) -->
    <script src="@Url.Content("~/js/bootstrap-carousel.js")"></script>
    <!-- autocomplete library -->
    <script src="@Url.Content("~/js/bootstrap-typeahead.js")"></script>
    <!-- tour library -->
    <script src="@Url.Content("~/js/bootstrap-tour.js")"></script>
    <!-- library for cookie management -->
    <script src="@Url.Content("~/js/jquery.cookie.js")"></script>
    <!-- calander plugin -->
    <script src="@Url.Content("~/js/fullcalendar.min.js")"></script>
    <!-- data table plugin -->
    <script src="@Url.Content("~/js/jquery.dataTables.min.js")"></script>

    <script src="@Url.Content("~/js/jquery.ui.i18n.all.min.js")"></script>

    <!-- chart libraries start -->
    <script src="@Url.Content("~/js/excanvas.js")"></script>
    <script src="@Url.Content("~/js/jquery.flot.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.flot.pie.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.flot.stack.js")"></script>
    <script src="@Url.Content("~/js/jquery.flot.resize.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.flot.time.min.js")"></script>
    <script src="@Url.Content("~/js/jquery.flot.axislabels.js")"></script>
    <!-- chart libraries end -->

    <!-- select or dropdown enhancer -->
    <script src="@Url.Content("~/js/jquery.chosen.min.js")"></script>
    <!-- checkbox, radio, and file input styler -->
    <script src="@Url.Content("~/js/jquery.uniform.min.js")"></script>
    <!-- plugin for gallery image view -->
    <script src="@Url.Content("~/js/jquery.colorbox.min.js")"></script>
    <!-- rich text editor library -->
    <script src="@Url.Content("~/js/jquery.cleditor.min.js")"></script>
    <!-- notification plugin -->
    <script src="@Url.Content("~/js/jquery.noty.js")"></script>
    <!-- file manager library -->
    <script src="@Url.Content("~/js/jquery.elfinder.min.js")"></script>
    <!-- star rating plugin -->
    <script src="@Url.Content("~/js/jquery.raty.min.js")"></script>
    <!-- for iOS style toggle switch -->
    <script src="@Url.Content("~/js/jquery.iphone.toggle.js")"></script>
    <!-- autogrowing textarea plugin -->
    <script src="@Url.Content("~/js/jquery.autogrow-textarea.js")"></script>
    <!-- multiple file upload plugin -->
    <script src="@Url.Content("~/js/jquery.uploadify-3.1.min.js")"></script>
    <!-- history.js for cross-browser state change on ajax -->
    <script src="@Url.Content("~/js/jquery.history.js")"></script>
    <!-- application script for Charisma demo -->
    <script src="@Url.Content("~/js/charisma.js")"></script>


</body>
</html>

