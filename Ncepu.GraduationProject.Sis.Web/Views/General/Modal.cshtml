@model Ncepu.GraduationProject.Sis.Web.Models.General.Index.QueryModel
@using Ncepu.GraduationProject.Sis.Web.Models.General.Index;

<!-- modal window  start-->
<div class="modal hide fade" id="genModal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>选择指标</h3>
    </div>
    @*    <form class="form-horizontal">*@
    @using (Html.BeginForm("Query", "General", FormMethod.Post, new { @class = "form-horizontal" }))
    { 
    
        <div class="modal-body">
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="icon-edit"></i>总体概况</h2>
                    </div>
                    <div class="box-content">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.GeneralInfo.IsTotalInstalledCapacityChecked)
                                                </span>
                                            </div>
                                            总装机容量</label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.GeneralInfo.IsDailyGenerateChecked)
                                                </span>
                                            </div>
                                            当日发电量
                                        </label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.GeneralInfo.IsMonthlyGenerateChecked)
                                                </span>
                                            </div>
                                            当月发电量</label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.GeneralInfo.IsYearlyGenerateChecked)
                                                </span>
                                            </div>
                                            当年发电量</label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="icon-edit"></i>选择机组</h2>
                    </div>
                    <div class="box-content">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.Unit[0].IsIdChecked)
                                                </span>
                                            </div>
                                            1#机组</label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.Unit[1].IsIdChecked)
                                                </span>
                                            </div>
                                            2#机组</label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.Unit[2].IsIdChecked)
                                                </span>
                                            </div>
                                            3#机组</label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.Unit[3].IsIdChecked)
                                                </span>
                                            </div>
                                            4#机组</label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well" data-original-title="">
                        <h2><i class="icon-edit"></i>机组指标</h2>
                    </div>
                    <div class="box-content">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.GeneralInfo.IsHourlyTotalAvgLoadChecked)</span>
                                            </div>
                                            总平均负荷</label>
                                    </td>
                                    <td>
                                        <label class="checkbox inline">
                                            <div class="checker">
                                                <span>
                                                    @Html.CheckBoxFor(m => m.Unit[0].IsHourlyAvgLoadChecked)</span>
                                            </div>
                                            机组平均负荷</label>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="box san12">
                    <div class="box-header well" data-orignal-title="">
                        <h2><i class="icon-edit"></i>日期选择</h2>
                    </div>
                    <div class="box-content">
                        <div class="control-group">
                            <label class="control-label" for="date01">选择日期:</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Date_01, DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "input-xlarge datepicker" })
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                @Html.TextBoxFor(m => m.Date_02, " ", new { @class = "input-xlarge datepicker", value = "" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">取消</a>
            <input type="submit" class="btn btn-primary" value="确定" />
        </div>
    }
</div>
<!-- modal window end -->
